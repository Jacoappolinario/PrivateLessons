<div class="item">
    <div>Avatar URL</div>
        <div>
            <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ student.avatar_url }}"
            >
        </div>
</div>

<div class="item">
    <div>Aluno(a)</div>
    <div>
        <input 
        type="text"
        name="name"
        placeholder="Nome do Aluno"
        value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
        type="email"
        name="email"
        placeholder="Informe o Email"
        value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
        type="date"
        name="birth"
        value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="school_year">
            <option value="5EF" {% if student.school_year == "5EF" %}
                selected
            {% endif %}>5º</option>
            <option value="6EF" {% if student.school_year == "6EF" %}
                selected
            {% endif %}>6º</option>
            <option value="7EF" {% if student.school_year == "7EF" %}
                selected
            {% endif %}>7º</option>
            <option value="8EF" {% if student.school_year == "8EF" %}
                selected
            {% endif %}>8º</option>
            <option value="9EF" {% if student.school_year == "9EF" %}
                selected
            {% endif %}>9º</option>
            <option value="1EM" {% if student.school_year == "1EM" %}
                selected
            {% endif %}>1º</option>
            <option value="2EM" {% if student.school_year == "2EM" %}
                selected
            {% endif %}>2º</option>
            <option value="3EM" {% if student.school_year == "3EM" %}
                selected
            {% endif %}>3º</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Carga Horária Semanal</div>
    <div>
        <input type="number" name="workload" value="{{ student.workload }}">
    </div>
</div>

<div class="item">
    <div>Professor(a)</div>
    <div>
       <select name="teacher">
           {% for teacher in teacherOptions %}
           <option value="{{ teacher.id }}"  {% if student.teacher_id == teacher.id %} selected {% endif %}>
               {{ teacher.name }}
           </option>
           {% endfor %}
       </select>
    </div>
</div>

<button type="submit">Salvar</button>

</div>

