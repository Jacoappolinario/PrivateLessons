<div class="item">
    <div>Avatar URL</div>
        <div>
            <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
            >
        </div>
</div>

<div class="item">
    <div>Professor (a)</div>
    <div>
        <input 
        type="text"
        name="name"
        placeholder="Nome do Professor"
        value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
        type="date"
        name="birth_date"
        value="{{ teacher.birth_date }}"
        >
    </div>
</div>

<div class="item">
    <div>Grau de Escolaridade</div>
    <div>
        <select name="education_level">
            <option value="1" {% if teacher.education_level == 1 %}
                selected
            {% endif %}> Ensino Médio Completo
            </option>

            <option value="2" {% if teacher.education_level == 2 %} 
                selected 
            {% endif %}> Ensino Superior Completo
            </option>

            <option value="3" {% if teacher.education_level == 3 %} 
                selected 
            {% endif %}> Mestrado e Doutorado
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <div>
        <span>
            <input 
            type="radio" 
            name="class_type"
            value="Presencial"
            {% if teacher.class_type == "Presencial" %}
                checked
            {% endif %}>Presencial
        </span>
        <span>
            <input 
            type="radio" 
            name="class_type"
            value="Distancia"
            {% if teacher.class_type == "Distancia" %}
                checked
            {% endif %}>À Distancia
        </span>
    </div>
</div>

<div class="item">
    <div>Área de Atuação</div>
    <div>
        <input 
        type="text"
        name="subjects_taught"
        placeholder="Separe as mastérias por vírgula"
        value="{{ teacher.subjects_taught }}"
        >
    </div>
</div>

</div>

<button type="submit">Salvar</button>