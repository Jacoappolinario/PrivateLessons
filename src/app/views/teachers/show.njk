{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section 
    class="avatar"
    style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor (a)</div>
            <div>{{ teacher.name }}</div>
        </div>

          <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{ teacher.education_level }}</div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>{{ teacher.class_type }}</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for subjects_taught in teacher.subjects_taught %}
                <span>{{ subjects_taught }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <div class="form">
            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

            <form id="button-delete" method="POST" action="/teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{ teacher.id }}">
                <button type="submit">Deletar</button>
            </form>
        </div>

    </section>

    {% include "confirm.njk" %}

</div>
{% endblock content %}